<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="end|center"
        android:layout_margin="0.5sp"
        android:ellipsize="start"
        android:textSize="50sp"
        android:singleLine="true"
        android:id="@+id/upper_text"

        />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="end|center"
        android:layout_margin="0.5sp"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        android:id="@+id/lower_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        
            <TextView
                style="@style/ClearButton"
                android:id="@+id/clear_btn"
                android:text="AC"
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/open_brackets_btn"
                android:text="("
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/close_brackets_btn"
                android:text=")"
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/divide_btn"
                android:text="/"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_seven_btn"
                android:text="7"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_eight_btn"
                android:text="8"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_nine_btn"
                android:text="9"
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/multiply_btn"
                android:text="*"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_four_btn"
                android:text="4"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_five_btn"
                android:text="5"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_six_btn"
                android:text="6"
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/minus_btn"
                android:text="â€”"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_one_btn"
                android:text="1"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_two_btn"
                android:text="2"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_three_btn"
                android:text="3"
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/plus_btn"
                android:text="+"
                />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/num_zero_btn"
                android:layout_weight="2"
                android:text="0"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/dot_btn"
                android:text="."
                />

            <TextView
                style="@style/OperationButton"
                android:id="@+id/equals_btn"
                android:text="="
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>